{
  "name": "@bunworks/inngest-realtime",
  "version": "0.1.8",
  "description": "Realtime messaging для @bunworks",
  "main": "./src/index.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "tsc -p tsconfig.build.json && tsdown --config tsdown.config.ts",
    "postversion": "bun run build",
    "release": "cross-env DIST_DIR=dist node ../../scripts/release/publish.js",
    "pack": "bun run build && mv $(npm pack ./dist --pack-destination . --silent) inngest-realtime.tgz",
    "publish:patch": "npm version patch --no-git-tag-version && bun run build && npm publish ./dist --access public"
  },
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./hooks": {
      "default": "./src/hooks.ts"
    },
    "./middleware": {
      "default": "./src/middleware.ts"
    },
    "./api": {
      "default": "./src/api.ts"
    }
  },
  "keywords": [
    "bunworks",
    "realtime",
    "websocket",
    "messaging"
  ],
  "homepage": "https://github.com/bunworks/inngest-realtime#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bunworks/inngest-realtime.git",
    "directory": "external/realtime"
  },
  "author": "Bunworks Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@vitest/coverage-v8": "4.0.18",
    "globals": "^17.3.0",
    "react": "^19.2.4",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "valibot": "1.2.0",
    "vite-tsconfig-paths": "^6.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.1.0",
    "debug": "^4.4.3",
    "zod": "^4.3.6"
  }
}
